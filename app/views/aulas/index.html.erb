

<p id="notice"><%= notice %></p>

<div class="container">
<div class="row">
  <div class="span4">
        <h2 class="text-center text-muted">Registro de Aula</h2>

        <%= link_to new_aula_path,  class: "btn btn-primary" do %>

              <i class="glyphicon glyphicon-plus"></i><% end %>
  </div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Bloque</th>
      <th>Capacidad</th>
      <th>Observacion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @aulas.each do |aula| %>
      <tr>
        <td><%= aula.nombre %></td>
        <td><%= aula.bloque %></td>
        <td><%= aula.capacidad %></td>
        <td><%= aula.observacion %></td>

        <td><%= link_to aula, class:"btn btn-success"  do %>
            <i class="glyphicon glyphicon-eye-open"></i>
           <% end %></td>


        <td><%= link_to edit_aula_path(aula), class:" btn btn-info" do  %> 
              <i class="glyphicon glyphicon-pencil"></i>
            <% end %> </td>


        <td><%= link_to aula, method: :delete, data: { confirm: 'Estas Seguro?' }, class:'btn btn-danger' do %> 
             <i class="glyphicon glyphicon-trash"></i>
          <% end %></td>
          
      </tr>
    <% end %>
  </tbody>
</table>

<br>


